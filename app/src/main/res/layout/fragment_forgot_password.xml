<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/forgotPasswordFragment"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    tools:context=".ui.auth.ForgotPasswordFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_marginHorizontal="10dp"


        >

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/btnBack"
            android:src="@drawable/arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content">


        </ImageButton>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget Password?"
                android:textSize="22sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/textBlackColor"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t worry! It happens, Please enter the email address associated with your account"
                android:textSize="16sp"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/lightTextColor"

                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/blueColor"
                android:layout_height="46dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="Email"
                    android:id="@+id/etEmail"
                    android:fontFamily="@font/inter_medium"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="@color/hintColor"
                    android:drawableTint="@color/blueColor"
                    android:drawableLeft="@drawable/mail"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:layout_marginHorizontal="10dp"
                    />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/error_background"
                android:text="Email ID does not exists"
                android:padding="8dp"
                android:textSize="12sp"
                android:id="@+id/errorBox"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_marginLeft="40dp"
                android:textColor="#FE0000"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="Submit"
                android:fontFamily="@font/inter_medium"
                android:id="@+id/btnSubmit"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/blueColor"

                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>